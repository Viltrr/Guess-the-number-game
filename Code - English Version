        print("Let's move on to Level 3!")
        level_3()

#---------------------------------------------------------------------------------------- LEVEL 3 ----------------------------------------------------------------------------------------
def level_3():
    clear_screen()
    attempts = 10
    print("----------------------------------------Level 3----------------------------------------")
    print("---------- Note: In level 3 you have {attempts} attempts. ----------")
    print("----------------------------------------------------------------------------------------")
    print("Try to guess the mystery number between 1 and 2000 :")
    
    random_nb = random.randint(1, 2000)
    
    for _ in range(attempts):
        try:
            player_nbr = int(input("Enter a number : "))
            
            if player_nbr > random_nb:
                print("The mystery number is smaller.") 
            elif player_nbr < random_nb:
                print("The mystery number is larger.") 
            else:
                print("------------------------------------------")  
                print("Well done, you've found the mystery number!")
                print("------------------------------------------")
                if prompt_next_level():
                    print("Let's move on to Level 4!")
                    level_4()
                return
        except ValueError:
            print("Please enter a valid integer between 1 and 2000.")
    
    print("You've run out of attempts! Game over.")
    exit()

