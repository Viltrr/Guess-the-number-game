        except ValueError:
            print("Please enter a valid integer between 1 and 8000.")
    
    print("You've run out of attempts! Game over.")
    exit()

#---------------------------------------------------------------------------------------- START THE GAME ----------------------------------------------------------------------------------------
choice_of_level()
