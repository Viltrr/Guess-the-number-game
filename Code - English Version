import random
import os

current_level = 0

def clear_screen():
    """Clears the terminal screen."""
    if os.name == 'nt':
        # Windows
        os.system('cls')
    else:
        # Unix-based systems (Linux, macOS, etc.)
        os.system('clear')

def prompt_next_level():
    """Prompts the player if they want to proceed to the next level."""
    while True:
        response = input("Do you want to proceed to the next level? (yes/no): ").strip().lower()
        if response in ["yes", "y"]:
            return True
        elif response in ["no", "n"]:
            print("Thank you for playing! Goodbye.")
            exit()
        else:
            print("Please enter 'yes' or 'no'.")

def choice_of_level():
    global current_level
    if current_level == 0:
        print("Let's start with Level 1!")
        level_1()

#---------------------------------------------------------------------------------------- LEVEL 1 ----------------------------------------------------------------------------------------
def level_1():
    clear_screen()
    print("----------------------------------------Level 1----------------------------------------")
    print("---------- Note: In level 1 you have an infinite number of trials. ----------")
    print("----------------------------------------------------------------------------------------")
    print("Try to guess the mystery number between 1 and 1000 :")
    
    random_nb = random.randint(1, 1000)
    
    while True:
        try:
            player_nbr = int(input("Enter a number : "))
            
            if player_nbr > random_nb:
                print("The mystery number is smaller.") 
            elif player_nbr < random_nb:
                print("The mystery number is larger.") 
            else:
                print("------------------------------------------")  
                print("Well done, you've found the mystery number!")
                print("------------------------------------------")
                break
        except ValueError:
            print("Please enter a valid integer between 1 and 1000.")
    
    if prompt_next_level():
        print("Let's move on to Level 2!")
        level_2()

#---------------------------------------------------------------------------------------- LEVEL 2 ----------------------------------------------------------------------------------------
def level_2():
    clear_screen()
    print("----------------------------------------Level 2----------------------------------------")
    print("---------- Note: In level 2 you have an infinite number of trials. ----------")
    print("----------------------------------------------------------------------------------------")
    print("Try to guess the mystery number between 1 and 2000 :")
    
    random_nb = random.randint(1, 2000)
    
    while True:
        try:
            player_nbr = int(input("Enter a number : "))
            
